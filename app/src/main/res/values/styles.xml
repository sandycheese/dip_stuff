<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--custom card view-->
    <style name="CardViewFix">
        <item name="android:layout_marginLeft">@dimen/card_margin_left</item>
        <item name="android:layout_marginRight">@dimen/card_margin_right</item>
    </style>

    <!--custom recycleview-->
    <style name="RecycleViewFix">
        <item name="android:paddingBottom">@dimen/recycle_view_padding_bottom</item>
        <item name="android:paddingTop">@dimen/recycle_view_padding_top</item>
    </style>

    <style name="GameCardTextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">@dimen/game_card_text_vertical_spacing</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
