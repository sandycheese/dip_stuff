<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cvSelection"
        style="@style/CardViewFix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/white_cards_margin_left"
        android:layout_marginRight="@dimen/white_cards_margin_right"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlSelectionCard1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_padding">

                <TextView
                    android:id="@+id/tvCardText1"
                    style="@style/GameCardTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="White Card Text"
                    android:textColor="@android:color/primary_text_light" />

            </RelativeLayout>

            <View
                android:id="@+id/dividerForSelection1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="?android:attr/listDivider" />

            <RelativeLayout
                android:id="@+id/rlSelectionCard2"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_padding">

                <TextView
                    android:id="@+id/tvCardText2"
                    style="@style/GameCardTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="White Card Text"
                    android:textColor="@android:color/primary_text_light" />

            </RelativeLayout>

            <View
                android:id="@+id/dividerForSelection2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="?android:attr/listDivider" />

            <RelativeLayout
                android:id="@+id/rlSelectionCard3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_padding">

                <TextView
                    android:id="@+id/tvCardText3"
                    style="@style/GameCardTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="White Card Text"
                    android:textColor="@android:color/primary_text_light" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvSelectionSelected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_padding"
                android:layout_marginRight="@dimen/card_padding"
                android:drawableRight="@drawable/ic_layers_grey_500_18dp"
                android:drawablePadding="8dp"
                android:gravity="right"
                android:text="Selected"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
