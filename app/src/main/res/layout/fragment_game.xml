<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cfcfcf">

    <android.support.v7.widget.CardView
        android:id="@+id/cvBlackCard"
        style="@style/CardViewFix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/recycle_view_padding_top"
        app:cardBackgroundColor="@color/colorBlackGameCard"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/card_padding">

            <TextView
                android:id="@+id/tvBlackCardText"
                style="@style/GameCardTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Black Card Text" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvWhiteCards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cvBlackCard"
        android:layout_marginTop="@dimen/recycle_view_for_white_cards_margin_top"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/recycle_view_padding_bottom"
        android:paddingLeft="@dimen/recycle_view_for_white_cards_padding_left"
        android:paddingRight="@dimen/recycle_view_for_white_cards_padding_right"
        android:paddingTop="@dimen/recycle_view_for_white_cards_padding_top" />

</RelativeLayout>