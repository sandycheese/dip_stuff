<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvHosts"
        style="@style/RecycleViewFix"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabCreateGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@+id/fabUpdateHostsList"
        android:layout_alignLeft="@+id/fabUpdateHostsList"
        android:layout_alignStart="@+id/fabUpdateHostsList"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_add_white_18dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabUpdateHostsList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_sync_white_18dp" />

</RelativeLayout>